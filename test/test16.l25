program ctor_new {
    class Point {
        let x: int;
        let y: int;

        Point(x: int, y: int) {
            this.x = x;
            this.y = y;
        }

        func sum() {
            return this.x + this.y;
        }
    }

    main {
        let p: *Point;
        p = new Point(3, 4);
        let res = p.sum();
        output(res);
    }
}
